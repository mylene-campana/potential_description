<?xml version="1.0"?>
<robot name="object"> <!--simple robot-->
  
  <link name="base_link"> <!-- required name-->
    <inertial>
      <origin xyz="0 0 0" /> 
      <mass value="1.0" />
      <inertia  ixx="1.0" ixy="0.0"  ixz="0.0"  iyy="100.0"  iyz="0.0"  izz="1.0" />
    </inertial>
    <visual>
      <origin xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.4" radius="0.01"/>
      </geometry>
      <material name="Gray">
        <color rgba="0.8 0.8 0.8 1"/>
      </material>
    </visual>
    <visual>
      <origin xyz="0.02 0 0.21"/> <!-- square marker for orientation -->
      <geometry>
        <box size="0.03 0.03 0.02"/>
      </geometry>
    </visual>    
    <collision>
      <origin xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.4" radius="0.01"/>
      </geometry>
    </collision>
  </link>
</robot>
